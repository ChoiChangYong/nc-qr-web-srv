    script(src="https://172.19.148.83:3000/socket.io/socket.io.js")
    script(src='/javascripts/qrcode.js')
    
    script(type='text/javascript').
      var setCookie = function(name, value, exp) {
        var date = new Date();
        date.setTime(date.getTime() + exp*60*1000);
        document.cookie = name + '=' + value + ';expires=' + date.toUTCString() + ';path=/';
      };

      var socket = io('https://172.19.148.83:3000');

      socket.emit('msg', { hello: 'server' });
      socket.on('recMsg', function (data) {
        console.log(data);
      });
      socket.on('auth', function (data) {
        setCookie('accessToken', data.user_token, 60); // 1시간 후 만료
        window.location.href = '/';
      });
      
      window.onload = function () {
        var qrcode = new QRCode(document.getElementById("qrcode"), {
          width : 250,
          height : 250,
          correctLevel : QRCode.CorrectLevel.H
        });
        qrcode.makeCode("#{qrcode}");
        $("#qrcode > img").css({"margin":"auto"});
        
        setInterval(timer, 1000);
      };

      var countDown = 30;
      function timer()
      {
          if (countDown <= 0){
            $("#qrcode").remove();
            $("#qrcodeMessage").remove();
            $('#qrcodeSession').html("QR코드가 만료되었습니다.<br />현재 페이지를 새로고침하여 새로 발급받아주세요!");
          }
          else{
            $('#qrcodeSession').text(countDown);
          }
          countDown--;
      }

